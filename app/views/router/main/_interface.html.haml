- interface = @router_main.interfaces.select{|a| a.net_type == net_type}.first || Router::Interface.new
= f.fields_for "interfaces_attributes[]", interface do |inf|
  .field
    = inf.label :name, _('Interface')
    = inf.select :name, interfaces
    = inf.hidden_field :net_type, :value => net_type
  .field
    = inf.label :config, _('Configuration IPv4')
    = inf.select :config, ip_configs
  .field
    = inf.label :ip_address, _('IP')
    = inf.text_field :ip_address
  .field
    = inf.label :ip_mask, _('Mask')
    = inf.text_field :ip_mask
  .field
    = inf.label :ip_gateway, _('Gateway')
    = inf.text_field :ip_gateway
