-if @forward_port.errors.any?
  #error_explanation
    %h2= "#{pluralize(@forward_port.errors.count, "error")} prohibited this forward_port from being saved:"
    %ul
      - @forward_port.errors.full_messages.each do |msg|
        %li= msg

.field
  = f.label :port
  = f.text_field :port
.field
  = f.label :computer_id, _('Computer IP')
  = f.select :computer_id, Router::Computer.all_as_pairs
.field
  = f.label :protocol
  = f.select :protocol, all_protocols

.actions
  = f.submit 'Save'
